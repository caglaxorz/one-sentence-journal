// Firestore Security Rules for One Sentence Journal
// Deploy these rules to Firebase using: firebase deploy --only firestore:rules
// Or paste into Firebase Console -> Firestore Database -> Rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isValidEntry() {
      let entry = request.resource.data;
      return entry.keys().hasAll(['date', 'text', 'mood', 'timestamp', 'userId'])
        && entry.text is string
        && entry.text.size() > 0
        && entry.text.size() <= 500
        && entry.mood is string
        && entry.date is string
        && entry.userId == request.auth.uid
        && entry.timestamp is timestamp;
    }
    
    // User entries collection: users/{userId}/entries/{entryId}
    match /users/{userId}/entries/{entryId} {
      // Users can only read/write their own entries
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && isValidEntry();
      allow update: if isOwner(userId) && isValidEntry();
      allow delete: if isOwner(userId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
